package com.sherman.testthread.info;
/**
 * Thread.currentThread()	 :当前线程
  setName():设置名称
  getName():获取名称
  isAlive():判断状态
 * @author Auser
 *
 */
public class TestInfo01  {
	public static void main(String[] args) throws InterruptedException {
		BaseThread bt1 = new BaseThread();
		Thread td1 = new Thread(bt1,"测试第一个线程");
		Thread td2 = new Thread(bt1,"测试第二个线程");
		Thread td3 = new Thread(bt1,"测试第三个线程");
		Thread td4 = new Thread(bt1,"测试第四个线程");
		Thread td5 = new Thread(bt1,"测试第五个线程");
		Thread td6 = new Thread(bt1,"测试第六个线程");
		Thread td7 = new Thread(bt1,"测试第七个线程");
		Thread td8 = new Thread(bt1,"测试第八个线程");
		td1.start();
		td2.start();
		td3.start();
		td4.start();
		td5.start();
		td6.start();
		td7.start();
		td8.start();
		Thread.sleep(1000*5);
		bt1.setFlag(false);
	
		
	}

}
