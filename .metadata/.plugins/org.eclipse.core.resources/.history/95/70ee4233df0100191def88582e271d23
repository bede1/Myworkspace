package com.sherman.testthread.pro;
/**
 * 测试实现生产者、消费者模式
 * 场景：
 * 1.生产者生产汽车
 * 2.消费者购买汽车
 * 3.汽车库存量最大100，当达到100时，生产必须停止。当库存=0时，消费必须停止
 * @author Auser
 *
 */
public class ProduceToConsumer {
	public static void main(String[] args) {
		
	}
}

class Storage{
	private int max_storage = 100;  //定义最大库存
	private int i = 80;  //当前库存
	private int produceSpeed = 100;   //生产用时
	private int comsumeSpeed = 200;		//消费用时
	public synchronized void produce() {
		while(i==max_storage) {
			try {
				this.wait();
			} catch (InterruptedException e) {
				// TODO 自动生成的 catch 块
				e.printStackTrace();
			}
		}
	}
}

